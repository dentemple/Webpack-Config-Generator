{
  "name": "webpack-config-generator",
  "version": "1.0.0",
  "private": true,
  "description": "Generates a starter configuration file via an easy-to-use questionnaire",
  "main": "server",
  "license": "MIT",
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"npm run start:server\" \"npm run start:client\"",
    "start:server": "nodemon server",
    "start:client": "webpack-dev-server --hot --open",
    "test": "jest -i --watch",
    "test:update": "npm run test --updateSnapshot",
    "test:coverage": "jest -i --coverage",
    "build": "webpack",
    "db": "node save-data/mongodb-orm.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "mongoose": "^5.2.13",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-hot-loader": "^4.3.6",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "styled-components": "^3.4.9",
    "webfontloader": "^1.6.28",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.2",
    "chai": "^4.1.2",
    "concurrently": "^4.0.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "file-loader": "^2.0.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "mongodb": "^3.1.4",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2",
    "redux-devtools-extension": "^2.13.5",
    "regenerator-runtime": "^0.12.1",
    "style-loader": "^0.23.0",
    "superagent": "^3.8.3",
    "supertest": "^3.3.0",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/server/test/setupTests.js",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/server/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
